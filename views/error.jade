doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{__('TITLE', community)}
    link(href="css/style.css", rel="stylesheet", type="text/css")
    link(href="//fonts.googleapis.com/css?family=Lato:300,400,700,900,700italic|Open+Sans:700italic,400,600,300,700,800", rel="stylesheet", type="text/css")
  body
    #wrapper
      .main
        .header
          .pixel
              img(src="images/pixel-white.svg")
          .workers
            img(src="images/workers-black.svg")
        .content
          object(type="image/svg+xml" data="images/pixel-bg.svg")
          .content-position
            .error
              h1= message
              h2= error.status
              pre #{error.stack}
